<?xml version="1.0"?>
<robot name="my_humanoid">

  <!-- Torso -->
  <link name="torso_link">
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.4"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.4"/>
      </geometry>
    </collision>
  </link>

  <!-- Left leg -->
  <link name="left_leg_link">
    <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
        <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>

    <visual>
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="0.3"/>
        </geometry>
    </visual>

    <collision>
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="0.3"/>
        </geometry>
    </collision>
  </link>

  <!-- Right leg -->
  <link name="right_leg_link">
    <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
        <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>

    <visual>
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="0.3"/>
        </geometry>
    </visual>

    <collision>
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.05" length="0.3"/>
        </geometry>
    </collision>
  </link>

  <!-- Left hip joint -->
  <joint name="left_hip_joint" type="revolute">
    <parent link="torso_link"/>
    <child link="left_leg_link"/>

    <!-- TODO: adjust position so leg is on the left side -->
    <origin xyz="0 0.1 -0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="10" velocity="1.0"/>
  </joint>

  <!-- Right hip joint -->
  <joint name="right_hip_joint" type="revolute">
    <parent link="torso_link"/>
    <child link="right_leg_link"/>

    <!-- TODO: mirror the left leg -->
    <origin xyz="0 -0.1 -0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.5" upper="0.5" effort="10" velocity="1.0"/>
  </joint>

  <gazebo>
    <static>true</static>
  </gazebo>

</robot>
